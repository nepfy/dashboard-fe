{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2019"],
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "@playwright/test"],
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": false,
    "outDir": "../.playwright-build"
  },
  "include": [
    "**/*.ts",
    "**/*.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

